<?xml version="1.0" encoding="UTF-8"?>
<transfer default="chunk">
  <section-def-cats>
    <def-cat n="sent">
      <cat-item tags="sent"/>
    </def-cat>
    <def-cat n="det">
      <cat-item tags="det.*"/>
    </def-cat>
    <def-cat n="noun">
      <cat-item tags="n.*"/>
    </def-cat>
    <def-cat n="verb">
      <cat-item tags="vblex.*"/>
      <cat-item tags="vbser.*"/>
    </def-cat>
    <def-cat n="itg_verb">
      <cat-item tags="vblex.*.itg.*"/>
    </def-cat>
    <def-cat n="ne_adverb">
      <cat-item lemma="ne" tags="adv"/>
    </def-cat>
    <def-cat n="nia_adverb">
      <cat-item lemma="nia" tags="adv"/>
    </def-cat>
    <def-cat n="al_pr">
      <cat-item lemma="al" tags="pr.*"/>
      <cat-item lemma="al" tags="prn.*"/>
    </def-cat>
    <def-cat n="se_prn">
      <cat-item lemma="se" tags="prn.*"/>
    </def-cat>
    <def-cat n="ester_verb">
      <cat-item lemma="ester" tags="vbser.*"/>
    </def-cat>
    <def-cat n="pa_lemma">
      <cat-item lemma="pe" tags="n.*"/>
    </def-cat>
    <def-cat n="adjective">
      <cat-item tags="adj.*"/>
    </def-cat>
  </section-def-cats>
  <section-def-attrs>
    <def-attr n="type">
      <attr-item tags="n"/>
      <attr-item tags="adj"/>
      <attr-item tags="vblex"/>
      <attr-item tags="det"/>
    </def-attr>
    <def-attr n="a_cas">
      <attr-item tags="nom"/>
    </def-attr>
    <def-attr n="num">
      <attr-item tags="sg"/>
      <attr-item tags="sp"/>
      <attr-item tags="pl"/>
    </def-attr>
    <def-attr n="gender">
      <attr-item tags="m"/>
      <attr-item tags="f"/>
    </def-attr>
    <def-attr n="det_attr">
      <attr-item tags="def"/>
      <attr-item tags="ind"/>
    </def-attr>
    <def-attr n="person">
      <attr-item tags="p1"/>
      <attr-item tags="p2"/>
      <attr-item tags="p3"/>
    </def-attr>
    <def-attr n="tense">
      <attr-item tags="pri"/>
    </def-attr>
  </section-def-attrs>
  <section-def-vars>
    <def-var n="number"/>
    <def-var n="caseFirstWord"/>
  </section-def-vars>
  <section-def-macros>
    <def-macro n="test" npar="1">
      <let>
        <var n="number"/>
        <lit v=""/>
      </let>
    </def-macro>
  </section-def-macros>
  <section-rules>
    <rule comment="REGLA: SENT">
      <pattern>
        <pattern-item n="sent"/>
      </pattern>
      <action>
        <out>
          <chunk name="sent" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="SENT"/>
              </tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="itg_verb"/>
      </pattern>
      <action>
        <out>
          <chunk name="itg_verb" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="ITGVERB"/>
              </tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="type"/>
              <clip pos="1" side="tl" part="tense"/>
              <clip pos="1" side="tl" part="person"/>
              <clip pos="1" side="tl" part="num"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="al_pr"/>
        <pattern-item n="se_prn"/>
        <pattern-item n="verb"/>
      </pattern>
      <action>
        <out>
          <chunk name="alseverb" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="NOUNPHRASE"/>
              </tag>
            </tags>
            <lu>
              <lit v="si"/>
              <lit-tag v="prn"/>
              <lit-tag v="pro"/>
              <lit-tag v="ref"/>
              <lit-tag v="p3"/>
              <lit-tag v="mf"/>
              <lit-tag v="sp"/>
            </lu>
            <b/>
            <lu>
              <clip pos="3" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="al_pr"/>
        <pattern-item n="verb"/>
      </pattern>
      <action>
        <out>
          <chunk name="det" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="NOUNPHRASE"/>
              </tag>
            </tags>
            <lu>
              <clip pos="2" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="verb"/>
        <pattern-item n="pa_lemma"/>
      </pattern>
      <action>
        <out>
          <chunk name="det" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="VERBWITHPA"/>
              </tag>
            </tags>

            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="type"/>
              <clip pos="1" side="tl" part="tense"/>
              <clip pos="1" side="tl" part="person"/>
              <clip pos="1" side="tl" part="num"/>
            </lu>
            <!-- <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu> -->
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="ne_adverb"/>
        <pattern-item n="verb"/>
        <pattern-item n="nia_adverb"/>
      </pattern>
      <action>
        <out>
          <chunk name="det" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="NOUNPHRASE"/>
              </tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="whole"/>
            </lu>
            <b/>
            <lu>
              <clip pos="2" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="det"/>
        <pattern-item n="noun"/>
      </pattern>
      <action>
        <out>
          <chunk name="detnoun" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="NOUNPHRASE"/>
              </tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="type"/>
              <clip pos="1" side="tl" part="det_attr"/>
              <clip pos="2" side="tl" part="gender"/>
              <clip pos="2" side="tl" part="num"/>
            </lu>
            <b/>
            <lu>
              <clip pos="2" side="tl" part="whole"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
    <rule>
      <pattern>
        <pattern-item n="det"/>
        <pattern-item n="noun"/>
        <pattern-item n="verb"/>
        <pattern-item n="adjective"/>
      </pattern>
      <action>
        <out>
          <chunk name="det" case="caseFirstWord">
            <tags>
              <tag>
                <lit-tag v="NOUNPHRASE"/>
              </tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="type"/>
              <clip pos="1" side="tl" part="det_attr"/>
              <clip pos="2" side="tl" part="gender"/>
              <clip pos="2" side="tl" part="num"/>
            </lu>
            <b/>
            <lu>
              <clip pos="2" side="tl" part="whole"/>
            </lu>
            <b/>
            <lu>
              <clip pos="3" side="tl" part="whole"/>
            </lu>
            <b/>
            <lu>
              <clip pos="4" side="tl" part="lem"/>
              <clip pos="4" side="tl" part="type"/>
              <clip pos="2" side="tl" part="gender"/>
              <clip pos="4" side="tl" part="num"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>
  </section-rules>
</transfer>
