<?xml version="1.0" encoding="UTF-8"?>
<modes>

  <!-- lld → ita -->

  <mode name="lld-ita" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="lld-ita.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="lld-ita.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="lld-ita.prob"/>
      </program>
      <program name="lsx-proc">
        <file name="lld-ita.autoseq.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="lld-ita.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="lld-ita.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-lld-ita.lld-ita.t1x"/>
        <file name="lld-ita.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-lld-ita.lld-ita.t2x"/>
        <file name="lld-ita.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-lld-ita.lld-ita.t3x"/>
        <file name="lld-ita.t3x.bin"/>
      </program>
      <program name="lsx-proc" debug-suff="revautoseq">
        <file name="lld-ita.revautoseq.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="lld-ita.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="lld-ita.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>

  <!-- ita → lld -->

  <mode name="ita-lld" install="yes" gendebug="yes">
    <pipeline>

      <program name="lt-proc -w">
        <file name="ita-lld.automorf.bin"/>
      </program>


      <program name="cg-proc -w">
        <file name="ita-lld.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="ita-lld.prob"/>
      </program>

      <program name="lsx-proc">
        <file name="ita-lld.autoseq.bin"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="ita-lld.autobil.bin"/>
      </program>
      <program name="lrx-proc -m">
        <file name="ita-lld.autolex.bin"/>
      </program>

      <program name="apertium-transfer -b">
        <file name="apertium-lld-ita.ita-lld.t1x"/>
        <file name="ita-lld.t1x.bin"/>
      </program>
      <program name="apertium-interchunk">
        <file name="apertium-lld-ita.ita-lld.t2x"/>
        <file name="ita-lld.t2x.bin"/>
      </program>
      <program name="apertium-postchunk">
        <file name="apertium-lld-ita.ita-lld.t3x"/>
        <file name="ita-lld.t3x.bin"/>
      </program>
      <program name="lsx-proc" debug-suff="revautoseq">
        <file name="ita-lld.revautoseq.bin"/>
      </program>

      <program name="lt-proc $1">
        <file name="ita-lld.autogen.bin"/>
      </program>
      <program name="lt-proc -p">
        <file name="ita-lld.autopgen.bin"/>
      </program>
    </pipeline>
  </mode>
</modes>

